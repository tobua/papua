  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
