    "jest-fixture": "^3.0.0",
    "tcp-port-used": "^1.0.2"
  },
  "prettier": "./configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/fixture",
      "template"
    ],
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!jest-fixture|logua|pakag|synec|strip-ansi|ansi-regex|webpack-format-messages|kleur|get-port|mem|mimic-fn|pretty-bytes).*/"
