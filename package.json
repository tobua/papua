  "type": "module",
  "main": "index.js",
  "bin": "cli.js",
  "files": [
    "configuration",
    "script",
    "utility",
    "*.js"
  ],
  "devDependencies": {
    "standard-version": "^9.1.1",
    "tcp-port-used": "^1.0.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/fixture",
      "template"
    ],
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
