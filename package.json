{
  "name": "papua",
  "description": "Setup and build modern web applications.",
  "version": "0.1.12",
  "repository": "github:tobua/papua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "postinstall": "node ./installation.js",
    "release": "standard-version",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^7.0.0",
    "core-js": "^3.8.1",
    "css-loader": "^5.0.1",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.4",
    "file-loader": "^6.2.0",
    "get-port": "^5.1.1",
    "html-webpack-plugin": "next",
    "jest": "^26.6.3",
    "logua": "^2.1.2",
    "mini-css-extract-plugin": "^1.3.3",
    "npm-check-updates": "^10.2.5",
    "object-assign-deep": "^0.4.0",
    "pakag": "^2.2.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.2.1",
    "pretty-bytes": "^5.4.1",
    "pretty-ms": "^7.0.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^1.0.5",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended": "^3.0.0",
    "synec": "^0.1.13",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-format-messages": "^2.0.6",
    "workbox-webpack-plugin": "^6.0.2"
  },
  "type": "module",
  "main": "index.js",
  "bin": "cli/index.js",
  "files": [
    "cli",
    "configuration",
    "script",
    "utility",
    "*.js"
  ],
  "devDependencies": {
    "standard-version": "^9.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "always"
      ]
    }
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/fixture",
      "template"
    ],
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  }
}
