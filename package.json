    "fs-extra": "^11.1.1",
    "get-port": "^6.1.2",
    "global-dirs": "^3.0.1",
    "logua": "^2.2.0",
    "node-html-parser": "^6.1.5",
    "object-assign-deep": "^0.4.0",
    "open": "^9.0.0",
    "pakag": "^2.7.0",
    "parse-gitignore": "^2.0.0",
    "prettier": "^2.8.7",
    "pretty-bytes": "^6.1.0",
    "pretty-ms": "^8.0.0",
