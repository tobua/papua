{
  "name": "papua",
  "description": "Setup and build modern web applications.",
  "version": "0.0.0-development",
  "repository": "github:tobua/papua",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "build": "padua build",
    "postinstall": "node ./installation.js",
    "start": "padua watch",
    "test": "vitest run --no-threads --dir test"
  },
  "padua": {
    "entry": [
      "installation.ts",
      "index.ts",
      "cli.ts"
