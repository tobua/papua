    "stylelint": "^15.3.0",
    "stylelint-config-recommended": "^11.0.0",
    "typescript": "^5.0.2",
    "webpack-format-messages": "^3.0.1",
    "workbox-webpack-plugin": "^6.5.4"
  },
  "type": "module",
  "sideEffects": true,
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": "./dist/cli.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "configuration"
  ],
  "devDependencies": {
    "@types/object-assign-deep": "^0.4.0",
    "cypress": "^12.8.1",
    "jest-fixture": "^4.0.2",
