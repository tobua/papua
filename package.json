{
  "name": "papua",
  "version": "0.1.2",
  "description": "Setup and build modern web applications.",
  "repository": "github:tobua/papua",
  "license": "MIT",
  "author": "Matthias Giger",
  "bin": "cli/index.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "release": "standard-version",
    "postinstall": "node ./installation.js",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.2",
    "babel-loader": "^8.1.0",
    "chalk": "^4.1.0",
    "core-js": "^3.6.5",
    "deep-for-each": "^3.0.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fast-glob": "^3.2.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.2",
    "logua": "^2.1.1",
    "npm-check-updates": "^9.2.3",
    "object-assign-deep": "^0.4.0",
    "pakag": "^2.1.0",
    "parse-gitignore": "^1.0.1",
    "prettier": "^2.1.2",
    "pretty-bytes": "^5.4.1",
    "pretty-ms": "^7.0.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "skip-local-postinstall": "^1.0.5",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "synec": "^0.1.12",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-format-messages": "^2.0.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": "./configuration/eslint.cjs",
    "rules": {
      "import/extensions": [
        2,
        "always"
      ],
      "no-console": 0
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/template/",
      "/script/"
    ],
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/cint"
    ]
  },
  "devDependencies": {
    "standard-version": "^9.0.0"
  },
  "files": [
    "cli",
    "configuration",
    "script",
    "utility",
    "*.js"
  ]
}
